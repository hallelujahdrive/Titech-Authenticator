{

  "description": "__MSG_extensionDescription__",
  "manifest_version": 2,
  "name": "Titech Authenticator",
  "version": "1.1.1",
  "icons": {
    "48": "icons/extension-48.png"
  },
  
  "content_scripts": [
    {
      "matches": ["https://portal.nap.gsic.titech.ac.jp/GetAccess/Login*"],
      "js": ["titech-auth.js"]
    }
  ],

  "options_ui": {
    "page": "options.html"
  },

  "permissions": [
    "storage"
  ], 

  "web_accessible_resources" : [
    "matrix.csv"
  ],

  "default_locale": "en"
}
