{

  "description": "__MSG_extensionDescription__",
  "manifest_version": 2,
  "name": "Titech Authenticator develop",
  "version": "1.0.2",
  "icons": {
    "48": "icons/extension-48.png"
  },
  
  "applications": {
    "gecko": {
      "id": "titech-authenricator-dev@hallelujahdrive.github.io"
    }
  },

  "browser_action": {
    "browser_style": true,
    "default_popup": "popup/menu.html",
    "default_icon": {
      "16": "icons/extension-16.png",
      "32": "icons/extension-32.png"
    }
  },

  "content_scripts": [
    {
      "matches": ["https://portal.nap.gsic.titech.ac.jp/GetAccess/Login*"],
      "js": ["titech-auth.js"]
    }
  ],

  "options_ui": {
    "page": "options.html"
  },

  "permissions": [
    "storage"
  ], 

  "web_accessible_resources" : [
    "options.html"
  ],

  "default_locale": "en"
}
